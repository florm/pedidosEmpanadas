<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Registrar">
    <ContentPage.Content>
        <Grid>
            <Image Source="portada.jpg" Aspect="AspectFill"/>
            <BoxView Color="#6d97c9" Opacity="0.8"/>
            <ActivityIndicator x:Name="ActIndicator"></ActivityIndicator>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="1" Padding="20,200,20,0">
                    <Frame CornerRadius="10" BackgroundColor="White" Opacity="0.5" Padding="5,0,5,0">
                        <StackLayout>
                            <Entry Placeholder="Ingrese su Email" x:Name="CorreoRegistro"/>
                        </StackLayout>
                    </Frame>
                    <Frame CornerRadius="10" BackgroundColor="White" Opacity="0.5" Padding="5,0,5,0">
                        <StackLayout>
                            <Entry Placeholder="Ingrese una Contraseña" x:Name="PassRegistro" IsPassword="True"/>
                        </StackLayout>
                    </Frame>
                    <Frame CornerRadius="10" BackgroundColor="White" Opacity="0.5" Padding="5,0,5,0">
                        <StackLayout>
                            <Entry Placeholder="Repita la Contraseña" x:Name="RePassRegistro" IsPassword="True"/>
                        </StackLayout>
                    </Frame>

                    <Button Clicked="Registrar_Click" Text="Iniciar Sesion" x:Name="BotonReg" BackgroundColor="White" TextColor="#6d97c9" BorderRadius="20"/>
                </StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>