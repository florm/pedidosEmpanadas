@using BackendTp.Models
@model BackendTp.Models.PedidoGustosEmpanadasViewModel

@{
    ViewBag.Title = "Iniciar";
    Layout = "~/Views/Shared/_UsuarioLayout.cshtml";

}
@section PaginaHeader{
    <link href="@Url.Content("~/lib/bootstrap-tagsinput/tagsinput.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/pedidoIniciar.css")" rel="stylesheet" />
}
<div class="col-lg-12">
    <div class="row wrapper title box-shadow page-heading bg-white">
        <div class="col-10">
            <h2>Iniciar Pedido</h2>
        </div>
        <div class="col-2 action_buttons">
         
        </div>
    </div>

@using (Html.BeginForm("Crear", "Pedido"))
{
    @Html.AntiForgeryToken()
    <div class="row">
        
        @Html.Partial("_pedidoFormulario")

        <div class="col-md-4">
            <div class="recuadro box-shadow bg-white">
                <h5>3. Ingrese email de los invitados</h5>
                <hr />
                @for (int i = 0; i < Model.Invitados.Count; i++)
                {
                    <input class="invitadosEditar" id="@Model.Invitados[i].Id" value="@Model.Invitados[i].Email" hidden="" />
                }
                <div id="divInvitado" class="form-group w-100">
                    <input id="inputInvitados" data-role="tagsinput" class="form-control" type="text" placeholder="ejempl@email.com" />
                </div>
            </div>
        </div>
        <div class="col-12 text-right mt-3">
            <input type="reset" value="Cancelar" id="btnCancelar" class="btn btn-cancelar mr-1" />
            <input type="submit" value="Iniciar" id="btnIniciar" class="btn btn-aceptar" />
        </div>
    </div>
}
</div>
@section custom_js_libraries
{
    <script src="@Url.Content("~/lib/bootstrap-tagsinput/typeahead.bundle.js")"></script>
    <script src="@Url.Content("~/lib/bootstrap-tagsinput/tagsinput.js")"></script>
}

@section custom_js_code
{
    <script>
        var usuarioController = "@Url.Action("Consultar","Usuario")";
    </script>
    <script src="@Url.Content("~/Scripts/vistas/pedidos/pedidos.js")"></script>
    <script src="@Url.Content("~/Scripts/vistas/pedidos/pedidosIniciar.js")"></script>
}
