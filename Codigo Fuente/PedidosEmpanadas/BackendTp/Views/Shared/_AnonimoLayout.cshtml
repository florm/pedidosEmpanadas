@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

<script>
    var pathRegistro = '@Url.Action("Registro", "Home")';
    var pathLogin = '@Url.Action("Login", "Home")';
    var pathPedidos = '@Url.Action("Pedido", "Pedido")';
</script>

<div id="contenedorAlertas" class="div-contenedor-alertas"></div>
<nav class="navbar navbar-expand-lg navbar-light menu">
    <a class="navbar-brand" href="#">ArmaTuPedido</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="#">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-toggle="modal" data-target="#registro">Registrate</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-toggle="modal" data-target="#login">Iniciar Sesión</a>
            </li>
        </ul>
    </div>
</nav>

@RenderBody()

<div class="row">
    <footer>
        <p>&copy; @DateTime.Now.Year - ArmaTuPedido</p>
    </footer>
</div>

@*modals*@
<div class="modal" id="registro">
    <div class="modal-dialog">
        <div class="modal-content custom-modal-content">
            <!-- Modal Header -->
            <div class="d-flex modal-header border-bottom-0">
                <h4 class="modal-title">Registro</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="pt-2" style="word-break: break-word;">
                    <div class="form-group col">
                        <label for="textEmail">Email</label>
                        <input class="form-control col-12" id="textEmail" type="email" name="email" value="" placeholder="Ingrese su email" />
                    </div>
                    <div class="form-group col">
                        <label for="textPassword">Contraseña</label>
                        <input class="form-control col-12" id="textPassword" type="password" name="password" value="" placeholder="Ingrese una contraseña" />
                    </div>
                    <div class="form-group col">
                        <label for="textRepetirPassword">Repetir contraseña</label>
                        <input class="form-control col-12" id="textRepetirPassword" type="password" name="password" value="" placeholder="Repita la contraseña" />
                    </div>

                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-cancelar" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-aceptar" id="btnAceptar">Aceptar</button>
            </div>

        </div>
    </div>
</div>
<div class="modal" id="login">
    <div class="modal-dialog">
        <div class="modal-content custom-modal-content">
            <!-- Modal Header -->
            <div class="d-flex modal-header border-bottom-0">
                <h4 class="modal-title">Login</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="pt-2" style="word-break: break-word;">
                    <div class="form-group col">
                        <label for="loginEmail">Email</label>
                        <input class="form-control col-12" id="loginEmail" type="email" name="email" value="" placeholder="Ingrese su email" />
                    </div>
                    <div class="form-group col">
                        <label for="loginPassword">Contraseña</label>
                        <input class="form-control col-12" id="loginPassword" type="password" name="password" value="" placeholder="Ingrese contraseña" />
                    </div>

                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-cancelar" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-aceptar" id="btnAceptarLogin">Aceptar</button>
            </div>

        </div>
    </div>
</div>